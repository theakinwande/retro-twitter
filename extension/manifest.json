{
  "manifest_version": 3,
  "name": "Old Twitter Mode",
  "version": "0.1.0",
  "description": "Revert X (Twitter) to the classic 2012â€“2015 look.",
  "icons": {
    "48": "icon48.bmp",
    "128": "icon128.bmp"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*", "*://x.com/*"],
      "js": ["content.js"],
      "css": ["old-twitter.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.bmp"
    }
  }
}
